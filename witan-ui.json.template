{
  "acceptedResourceRoles": ["slave_public"],
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "mastodonc/witan.ui:@@TAG@@",
      "parameters": [
         {"key": "log-driver", "value": "gelf"},
         {"key": "log-opt", "value": "gelf-address=udp://52.58.38.169:12201"}
      ],
      "network": "BRIDGE",
      "portMappings": [
          {
              "containerPort": 80,
              "hostPort": 80,
              "protocol": "tcp"
          }
      ]
    }
  },
  "id": "witan-ui",
  "cpus": 1,
  "mem": 2048,
  "healthChecks": [{
        "path": "/",
        "protocol": "HTTP",
        "gracePeriodSeconds": 600,
        "intervalSeconds": 60,
        "portIndex": 0,
        "timeoutSeconds": 20,
        "maxConsecutiveFailures": 3
  }]
}
